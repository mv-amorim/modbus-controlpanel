#:kivy 1.11.1

<MainWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgb: 0.5,0.5,0.5
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1,0.1)
        spacing: 10
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 400
            Label:
                text: 'Configurações'
            BoxLayout:
                orientation: 'horizontal'
                Button:
                    text: 'MODBUS'
                    on_release: root._modbusPopup.open()
                Button:
                    text: 'ScanTime'
                    on_release: root._scanPopup.open()
        Image:
            id: img_con
            size_hint_x: None
            width: 80
            source: 'imgs/desconectado.png'
            pos_hint: {'top': 1, 'right': 1}

    FloatLayout:
        canvas:
            Color:
                rgb: 1,1,1
            Rectangle:
                size: self.size
        Image:
            source: 'imgs/branco.jpg'
        
        Button:
            size_hint: (None, None)
            size: (0.65*62, 0.65*58)
            background_normal: 'imgs/graph_icon.jpg'
            background_down: 'imgs/graph_icon.jpg'
            pos_hint: {'x': 0.002,'y': 0.22}
            on_release:
                root._graph.open()
        Label:
            id: co.temp_carc
            text: '-.- '
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x': 0.175,'y': 0.355}
            color: 0,0,0,1
        Label:
            id: co.pit01
            text: '-.- '
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x':0.175,'y': 0.28}
            color: 0,0,0,1
        Label:
            id: co.vel
            text: '-.- '
            font_size: 25
            bold: True
            halign: 'center'
            pos_hint: {'x':0.175,'y': 0.205}
            color: 0,0,0,1