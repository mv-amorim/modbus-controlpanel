#:kivy 2.3.0
<DataGraphPopup>:
    title: "Gráfico da pressão"
    BoxLayout:
        orientation: 'vertical'
        TimeSeriesGraph:
            id: graph
            xlabel: 'Horário'
            ylabel: 'Pressão []'
            background_color: 0.5,0.5,0.5,0.5
            x_ticks_minor: 1
            x_ticks_major: 5
            y_ticks_major: 100
            y_grid_label: True
            x_grid_label: True
            padding: 5
            x_grid: True
            y_grid: True
            xmin: 0
            ymin: 0
            ymax: 600
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1,0.05)
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (0.5,1)
                Label:
                    size_hint: (0.3,1)
                    text: "Número do pontos do gráfico"
                LabeledCheckBoxDataGraph:
                    id: mp20
                    on_kv_post:
                        self.ids.label.text = '20'
                        self.ids.checkbox.group = 'cb_group'
                        self.ids.checkbox.active = True
                LabeledCheckBoxDataGraph:
                    id: mp50
                    on_kv_post:
                        self.ids.label.text = '50'
                        self.ids.checkbox.group = 'cb_group'
                LabeledCheckBoxDataGraph:
                    id: mp100
                    on_kv_post:
                        self.ids.label.text = '100'
                        self.ids.checkbox.group = 'cb_group'
            Button:
                text: "Fechar"
                size_hint: (0.2,1)
                on_release: root.dismiss()


<LabeledCheckBoxDataGraph>:
    orientation: 'horizontal'
    size_hint: (0.1,1)
    CheckBox:
        id: checkbox
        on_active: app.root._graph.ids.graph.setMaxPoints(int(label.text), 0) if app.root is not None else None
    Label:
        id: label

<SettingsPopup>:
    title: "Configurações"
    size_hint: (None,None)
    size: (400,400)
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 320
        Label:
            text: "Endereço IP"
            text_size: self.size
            size_hint_y: None
            height: 40
            padding: [0,0,0,5]
            font_size: 14
        TextInput:
            id: txt_ip
            text: "127.0.0.1"
            font_size: 14
            halign: 'left'
            valign: 'middle'
            height: 30
            size_hint_y: None
            multiline: False
            write_tab: False
            on_text_validate:
                root.submit()
        Label:
            text: "Porta"
            text_size: self.size
            size_hint_y: None
            height: 40
            padding: [0,0,0,5]
            font_size: 14
        TextInput:
            id: txt_port
            text: "502"
            font_size: 14
            halign: 'left'
            valign: 'middle'
            height: 30
            size_hint_y: None
            multiline: False
            write_tab: False
            input_filter: 'int'
            on_text_validate:
                root.submit()
        Label:
            text: "ScanTime [ms]"
            text_size: self.size
            size_hint_y: None
            height: 40
            padding: [0,0,0,5]
            font_size: 14
        TextInput:
            id: txt_st
            font_size: 14
            halign: 'left'
            valign: 'middle'
            height: 30
            size_hint_y: None
            multiline: False
            write_tab: False
            input_filter: 'int'
            on_text_validate:
                root.submit()
        BoxLayout:
            orientation: 'horizontal'
            Button:
                size_hint_y: None
                height: 40
                text: "Fechar"
                on_release:
                    root.dismiss()
            Button:
                size_hint_y: None
                height: 40
                text: "Salvar"
                on_release:
                    root.submit()
