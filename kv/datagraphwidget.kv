#:kivy 2.3.0
<DataGraphWidget>:
    orientation: 'vertical'
    padding: [50]
    spacing: 20
    size_hint: (1,1)
    canvas:
        Color:
            rgba: (0.5,0.5,0.5,0.5)
        Rectangle:
            pos: self.pos
            size: self.size
    TimeSeriesGraph:
        id: graph
        xlabel: 'Hor√°rio'
        ylabel: 'Valor'
        background_color: (0.5,0.5,0.5,0.5)
        x_ticks_minor: 1
        x_ticks_major: 100
        y_ticks_major: 100
        y_grid_label: True
        x_grid_label: True
        padding: 5
        x_grid: True
        y_grid: True
        xmin: 0
        ymin: 0
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,None)
        height: 100
        Label:
            size_hint_y: None
            height: 30
            text_size: self.size
            text: "Legenda"
        GridLayout:
            cols: 14
            rows: 2
            size_hint: (1,1)
            spacing: 5
            id: legends