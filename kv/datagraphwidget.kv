#:kivy 2.3.0
<DataGraphWidget>:
    orientation: 'vertical'
    padding: [50]
    spacing: 20
    size_hint: (1,1)
    canvas:
        Color:
            rgba: (0.5,0.5,0.5,0.5)
        Rectangle:
            pos: self.pos
            size: self.size
    TimeSeriesGraph:
        id: graph
        xlabel: 'Hor√°rio'
        ylabel: 'Valor'
        background_color: (0.5,0.5,0.5,0)
        x_ticks_minor: 1
        x_ticks_major: 100
        y_ticks_major: 100
        y_grid_label: True
        x_grid_label: True
        padding: 5
        x_grid: True
        y_grid: True
    BoxLayout:
        orientation: 'vertical'
        size_hint: (1,None)
        height: 160
        spacing: 20
        Label:
            size_hint_y: None
            height: 30
            text_size: self.size
            text: "Legenda"
        GridLayout:
            cols: 8
            rows: 4
            size_hint: (1,1)
            spacing: 10
            id: legends

<Legend>:
    orientation: 'horizontal'
    spacing: 10
    size_hint_y: None
    height: 20
    Widget:
        size: (20,20)
        size_hint: (None,None)
        canvas:
            Color:
                rgb: root.color
            Rectangle:
                pos: self.pos
                size: (20,20)
    Label:
        text: root.text
        text_size: self.size
        halign: 'left'
        valign: 'middle'