#:kivy 2.3.0
#:import utils kivy.utils
<IndicatorWidget>:
    size_hint: (None,1)
    width: 15
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#C0C0C0')
        Rectangle:
            size: (self.width-5, .1*self.height)
            pos: (self.x, self.y + .9*self.height)
        Rectangle:
            size: (self.width-5, .1*self.height)
            pos: (self.x,self.y)
        Color:
            rgb: utils.get_color_from_hex('#D4D4D4')
        Rectangle:
            size: (self.width-5, .2*self.height)
            pos: (self.x, self.y + .7*self.height)

        Color:
            rgb: utils.get_color_from_hex('#919191')
        Line:
            points: [self.x, self.y, self.x, self.y + self.height, self.x + self.width-5, self.y + self.height, self.x + self.width-5, self.y]
            width: 1
            close: True
        Line:
            points: [self.x + self.width-5, self.y, self.x + self.width, self.y]
            width: 1
        Line:
            points: [self.x + self.width-5, self.y + self.height/4, self.x + self.width, self.y + self.height/4]
            width: 1
        Line:
            points: [self.x + self.width-5, self.y + 2*self.height/4, self.x + self.width, self.y + 2*self.height/4]
            width: 1
        Line:
            points: [self.x + self.width-5, self.y + 3*self.height/4, self.x + self.width, self.y + 3*self.height/4]
            width: 1
        Line:
            points: [self.x + self.width-5, self.y + self.height, self.x + self.width, self.y + self.height]
            width: 1
    canvas:
        Color:
            rgb: utils.get_color_from_hex('#475CA7')
        Triangle:
            points: (self.x-5, self.y-6 + self.increment, self.x-5, self.y+6 + self.increment, self.x+5, self.y + self.increment)