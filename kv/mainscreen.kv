#:kivy 2.3.0
#:import utils kivy.utils
<MainScreen>:
    BoxLayout:
        orientation: 'horizontal'
        canvas:
            Color:
                rgb: 0.5,0.5,0.5
            Rectangle:
                size: self.size
        FloatLayout:
            size_hint: (1,1)
            canvas.before:
                Color:
                    rgb: utils.get_color_from_hex('#E0E0E0')
                Rectangle:
                    size: self.size
                Color:
                    rgba: utils.get_color_from_hex('#A0A0A4')
                Line:
                    width: 1
                    rectangle: self.x + 100, self.y + 50, 530, self.height - 100
                Line:
                    width: 1
                    rectangle: self.x + 640, self.y + 50, 340, self.height - 100

            PlantWidget:
                id: plant
                size_hint: (1,1)

            Button:
                id: xv1_btn
                size_hint: (None,None)
                size: (60,40)
                pos: (1320,849)
                background_color: 0, 0, 0, 0
                on_release: root.switch_xv(1)
            
